{
  "manifest_version": 2,
  "version": "1.0",

  "name": "__MSG_Name__",
  "description": "__MSG_Description__",
  "homepage_url": "https://github.com/katzelad/new-tab-button",

  "default_locale": "en",

  "icons": {
    "32": "icon.png"
  },

  "applications": {
    "gecko": {
      "id": "new-tab-button@ekz"
    }
  },
  
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "__MSG_NewTab__"
  },

  "background": {
    "scripts": ["background.js"]
  },
  
  "options_ui": {
    "page": "options.html"
  },
  
  "permissions": ["storage"]
}
